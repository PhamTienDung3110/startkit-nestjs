{
  // TypeScript Compiler Configuration
  // File này cấu hình cách TypeScript compile code sang JavaScript
  
  "compilerOptions": {
    // Target: Phiên bản JavaScript được generate (ES2022 = ES2022 syntax)
    "target": "ES2022",
    // Module: Hệ thống module sử dụng (CommonJS cho Node.js)
    "module": "CommonJS",
    // ModuleResolution: Cách TypeScript resolve module imports (Node.js style)
    "moduleResolution": "Node",
    // rootDir: Thư mục gốc chứa source code
    "rootDir": ".",
    // outDir: Thư mục output cho compiled JavaScript files
    "outDir": "dist",
    // strict: Bật tất cả strict type checking options
    "strict": true,
    // esModuleInterop: Cho phép import CommonJS modules như ES modules
    "esModuleInterop": true,
    // skipLibCheck: Bỏ qua type checking trong .d.ts files để tăng tốc compile
    "skipLibCheck": true,
    // typeRoots: Các thư mục chứa type definitions (@types packages và custom types)
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  // include: Các file/folder được include trong compilation
  "include": ["src", "prisma.config.ts", "prisma/**/*.ts"]
}
